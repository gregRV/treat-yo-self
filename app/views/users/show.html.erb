<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<h3>Welcome, <%= @user.name %></h3>

<h4>Tix: <%= @user.tix %></h4>

<p><%= link_to 'Create New Task', new_user_task_path(@user) %></p>
<p><%= link_to 'Create New Treat', new_user_treat_path(@user) %></p>

<h4>Tasks</h4>
<ul>
	<% @user.tasks.each do |t| %>
		<li><%= link_to t.title, user_task_path(@user, t) %> (<%= t.reward %>)</li>
	<% end %>
</ul>

<h4>Treats</h4>
<ul>
	<% @user.treats.each do |t| %>
		<li><%= link_to t.title, user_treat_path(@user, t) %> (<%= t.price %>)</li>
	<% end %>
</ul>
